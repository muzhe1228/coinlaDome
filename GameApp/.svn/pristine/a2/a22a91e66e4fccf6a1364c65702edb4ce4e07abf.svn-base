placeholderColor($color)
  &::-webkit-input-placeholder {
    color: $color;
  }
  &::-moz-placeholder {
    /* Mozilla Firefox 19+ */
    color:  $color;
  }
  &::-moz-placeholder {
    /* Mozilla Firefox 4 to 18 */
    color:  $color;
  }
  &::-ms-input-placeholder {
    /* Internet Explorer 10-11 */
    color:  $color;
  }
//不换行
no-wrap()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

//行数限制
text-hid($num)
  width: 100%
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-line-clamp: $num
  overflow: hidden

