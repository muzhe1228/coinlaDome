@select-indent: 12px;
.select-comp {
  position: relative;
  font-size: 0.149813rem;
  width: 100%;
  height: 100%;
  z-index: 1;
  color: #e3c877;
  p {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #e3c877;
    outline: 0;
    position: relative;
    .iconfont {
      display: inline-block;
      font-size: 0.149813rem;
      position: absolute;
      right: 8%;
      top: 50%;
      margin-top: -0.074906rem;
    }
  }
  ul {
    position: absolute;
    width: 100%;
    display: none;
    overflow: hidden;
    top: 100%;
  }
  li {
    height: 0.479401rem;
    line-height: 0.479401rem;
    cursor: pointer;
    text-align: center;
    background-color: #2b292f;
    color: #fff;
    &:hover,
    &.active {
      background-color: #242228;
      color: #e3c877;
    }
  }
  &.blueBorder {
    span,
    ul,
    input {
      // border-color:@minorText;
      // box-shadow: 0 0 2px 1px @minorText;
    }
    ul {
      display: block;
    }
  }
}
